      <?php if (isset($holding['item_notes'])): ?>
        <div class="holding-notes">
          <div class="item-notes">
            <b><?=$this->transEsc('Item Notes')?>:</b>
            <ul>
              <?php foreach ($holding['item_notes'] as $item_note): ?>
                <li><?=$this->escapeHtml($item_note) ?></li>
              <?php endforeach; ?>
            </ul>
          </div>
        </div>
      <?php endif; ?>
