<?php
  $ratingData = $this->ratings()->getRatingData($this->driver);
  $translationParams = [
    '%%rating%%' => $this->localizedNumber($ratingData['rating']),
    '%%count%%' => $this->localizedNumber($ratingData['count']),
  ];
