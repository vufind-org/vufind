    // Set up page title:
    $lookfor = $this->params->getDisplayQuery();
    if (isset($this->overrideTitle)) {
        $this->headTitle($this->overrideTitle);
    } else {
        $this->headTitle($this->translate('Search Results') . (empty($lookfor) ? '' : " - {$lookfor}"));
    }
