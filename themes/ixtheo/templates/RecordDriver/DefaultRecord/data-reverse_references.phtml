<?php foreach ($this->driver->getReverseReferences() as $title_or_ppn => $supplementary_information): ?>
  <?php if (count($supplementary_information) == 1): ?>
    <a href="<?=$this->recordLink()->getUrl($title_or_ppn)?>"><?=$this->escapeHtml($supplementary_information[0])?></a>
  <?php else: ?>
    <?php $linked_ppn = $supplementary_information[1]; ?>
    <?php if (empty($supplementary_information[0])): $reviewer = ''; else: $reviewer = ' ('.$this->escapeHtml($supplementary_information[0]) . ')'; endif; ?>
    <?php if ($linked_ppn != '000000000'): ?>
      <a href="<?=$this->recordLink()->getUrl($linked_ppn)?>"><?=$this->escapeHtml($title_or_ppn) . $reviewer?></a>
    <?php else: ?>
      <?=$this->escapeHtml($title_or_ppn) . $reviewer?>
    <?php endif; ?>
  <?php endif; ?>
  <br/>
<?php endforeach; ?>