    <a href="<?=$affectiveURL ?>" class="text">
  <? else: ?>
    <span class="text">
  <? endif; ?>

  <?=$this->escapeHtml($thisFacet['displayText'])?>

  <? if (!$thisFacet['isApplied'] && $this->allowExclude): ?>
      </a>
    </div>
  <? else: ?>
      </span>
    </a>
