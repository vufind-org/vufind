      <div class="cover-wrapper">
        <? /* Display thumbnail if appropriate: */ ?>
        <? if ($img): ?>
          <?=$img->render('record', ['small' => ['w' => 50, 'h' => 50], 'medium' => ['w' => 1200, 'h' => 1200]]) ?>
        <? endif;?>
