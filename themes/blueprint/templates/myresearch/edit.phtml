      <? endforeach; ?>
    </select>
    <br/><br/>
  <? endif; ?>
  <? if (!empty($this->savedData) || count($this->lists) > 0): ?>
    <input class="button" type="submit" name="submit" value="<?=$this->transEsc('Save') ?>"/>
