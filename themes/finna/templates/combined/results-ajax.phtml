    // Make sure OpenURL support is loaded
    $this->headScript()->appendFile("openurl.js");

    $view = $currentSearch['view'];
    $results = $view->results;
    $params = $results->getParams();
    $lookfor = $params->getDisplayQuery();

    $searchIds = null;
