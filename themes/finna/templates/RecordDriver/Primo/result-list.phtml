<?
  $combinedView = $this->layout()->templateDir === 'combined';
?>
<div class="<?=$this->driver->supportsAjaxStatus()?'ajaxItem ':''?>">
    <div>
      <input type="hidden" value="<?=$this->escapeHtmlAttr($this->driver->getUniqueID())?>" class="hiddenId" />
      <input type="hidden" value="<?=$this->escapeHtmlAttr($this->driver->getSourceIdentifier())?>" class="hiddenSource" />
    </div>
    <div class="col-sm-11">
      <div>
        <a href="<?=$this->recordLink()->getUrl($this->driver)?>" class="title">
        <?
          $summHighlightedTitle = $this->driver->getHighlightedTitle();
          $summTitle = $this->driver->getTitle();
          if (!empty($summHighlightedTitle)) {
            echo $this->highlight($this->addEllipsis($summHighlightedTitle, $summTitle));
          } else if (!empty($summTitle)) {
            echo $this->escapeHtml($this->truncate($summTitle, 180));
          } else {
            echo $this->transEsc('Title not available');
          }
        ?>
        </a>

      </div>
      <div class="dateyeartype">
        <div class="resultItemFormat"><?=str_replace('class="', 'class="label label-info ', $this->record($this->driver)->getFormatList())?></div>
        <? if($this->driver->isCollection()): ?>
          <?=implode('<br>', $this->driver->getSummary()); ?>
        <? else: ?>
          <?
            $highlight = true;
            $summAuthors = $this->driver->getHighlightedAuthors();
            if (empty($summAuthors)) {
                $summAuthors = $this->driver->getCreators();
                $highlight = false;
            }
          ?>
          <? if (!empty($summAuthors)): ?>
            <? foreach ($summAuthors as $i => $summAuthor): ?>
              <?= $i > 0 ? '; ' : '' ?>
              <? $cleanAuthor = str_replace('{{{{END_HILITE}}}}', '', str_replace('{{{{START_HILITE}}}}', '', $summAuthor)); ?>
              <a href="<?=$this->record($this->driver)->getLink('author', $cleanAuthor)?>"><?=$highlight ? $this->highlight($summAuthor) : $this->escapeHtml($summAuthor); ?></a>
            <? endforeach; ?>
          <? endif; ?>
          <? $journalTitle = $this->driver->getContainerTitle(); $summDate = $this->driver->getPublicationDates(); ?>
          <? if (!empty($journalTitle)): ?>
            <?=!empty($summAuthors) ? '' : ' '?>
            <?=$this->transEsc('Published in') . ' <a href="' . $this->record($this->driver)->getLink('journaltitle', $journalTitle) . '">' . $journalTitle . '</a>';?>
            <? $ref = $this->driver->getContainerReference(); if (!empty($ref)) { echo $this->escapeHtml($ref); } else if (!empty($summDate)) { echo($this->escapeHtml($summDate[0])); } ?>
          <? elseif (!empty($summDate)): ?>
            <?=!empty($summAuthors) ? '' : ' '?>
            <?=$this->escapeHtml($summDate[0])?>
          <? endif; ?>
          <? $summInCollection = $this->driver->getContainingCollections(); if (!empty($summInCollection)): ?>
            <? foreach ($summInCollection as $collId => $collText): ?>
              <div>
                <b><?=$this->transEsc("in_collection_label")?></b>
                <a class="collectionLinkText" href="<?=$this->url('collection', array('id' => $collId))?>?recordID=<?=urlencode($this->driver->getUniqueID())?>">
                  <?=$this->escapeHtml($collText)?>
                </a>
              </div>
            <? endforeach; ?>
          <? endif; ?>
        <? endif; ?>
      </div>

      <? if(!$this->driver->isCollection()): ?>
        <? if ($snippet = $this->driver->getHighlightedSnippet()): ?>
          <? if (!empty($snippet['caption'])): ?>
            <strong><?=$this->transEsc($snippet['caption']) ?>:</strong> ';
          <? endif; ?>
          <? if (!empty($snippet['snippet'])): ?>
            <span class="quotestart">&#8220;</span>...<?=$this->highlight($snippet['snippet']) ?>...<span class="quoteend">&#8221;</span><br/>
          <? endif; ?>
        <? endif; ?>
      <? endif; ?>

      <?
      /* Display information on duplicate records if available */
      $dedupData = $this->driver->getDedupData();
      if ($dedupData): ?>
      <div class="dedupInformation">
      <?
        $i = 0;
        foreach ($dedupData as $source => $current) {
          if (++$i == 1) {
            ?><span class="currentSource"><a href="<?=$this->recordLink()->getUrl($this->driver)?>"><?=$this->transEsc("source_$source", array(), $source)?></a></span><?
          } else {
            if ($i == 2) {
              ?> <span class="otherSources">(<?=$this->transEsc('Other Sources')?>: <?
            } else {
              ?>, <?
            }
            ?><a href="<?=$this->recordLink()->getUrl($current['id'])?>"><?=$this->transEsc("source_$source", array(), $source)?></a><?
          }
        }
        if ($i > 1) {
          ?>)</span><?
        }?>
      </div>
      <? endif; ?>

      <div class="callnumAndLocation ajax-availability hidden">
        <? if ($this->driver->supportsAjaxStatus()): ?>
          <strong class="hideIfDetailed"><?=$this->transEsc('Call Number')?>:</strong>
          <span class="callnumber ajax-availability hidden">
            <?=$this->transEsc('Loading')?>...<br/>
          </span>
          <strong><?=$this->transEsc('Located')?>:</strong>
          <span class="location ajax-availability hidden">
            <?=$this->transEsc('Loading')?>...
          </span>
          <div class="locationDetails clearfix"></div>
        <? else: ?>
          <? $summCallNo = $this->driver->getCallNumber(); if (!empty($summCallNo)): ?>
            <strong><?=$this->transEsc('Call Number')?>:</strong> <?=$this->escapeHtml($summCallNo)?>
          <? endif; ?>
        <? endif; ?>
      </div>
      <?=$this->record($this->driver)->getPreviews()?>
      <?
        $summary = false;
        $highlightedSummary = $this->driver->getHighlightedSummary();
        if (isset($highlightedSummary[0])) {
           $summary = $this->highlight($highlightedSummary[0]);
        } else {
           $summary = $this->driver->getSummary();
           if (isset($summary[0])) {
              $summary = $this->escapeHtml($summary[0]);
           }
        }
      ?>
      <? if ($summary): ?>
        <div class="truncate-field">
          <p class="summary"><?=$summary;?></p>
        </div>
      <? endif; ?>
      <?
      $openUrl = $this->openUrl($driver, 'results');
      $openUrlActive = $openUrl->isActive();
      ?>
    </div>
    <div class="<?= $combinedView ? 'hidden' : 'hidden-xs' ?> col-sm-1 hidden-print">
      <? /* Display qrcode if appropriate: */ ?>
      <? if ($QRCode = $this->record($this->driver)->getQRCode("results")): ?>
        <?
          // Add JS Variables for QrCode
          $this->jsTranslations()->addStrings(array('qrcode_hide' => 'qrcode_hide', 'qrcode_show' => 'qrcode_show'));
        ?>
        <span class="hidden-xs">
          <i class="fa fa-qrcode"></i> <a href="<?=$this->escapeHtmlAttr($QRCode);?>" class="qrcodeLink"><?=$this->transEsc('qrcode_show')?></a>
          <div class="qrcode hidden">
            <img alt="<?=$this->transEsc('QR Code')?>" src="<?=$this->escapeHtmlAttr($QRCode);?>"/>
          </div><br/>
        </span>
      <? endif; ?>

      <? if ($this->userlist()->getMode() !== 'disabled'): ?>
        <? /* Add to favorites */ ?>
        <a href="<?=$this->recordLink()->getActionUrl($this->driver, 'Save')?>" class="save-record hidden-print" data-lightbox data-id="<?=$this->escapeHtmlAttr($this->driver->getUniqueId()) ?>" title="<?=$this->transEsc('Add to favorites')?>"><i class="fa fa-heart"></i> <span class="sr-only"><?=$this->transEsc('Add to favorites')?></span></a><br/>
      <? endif; ?>

      <? /* Hierarchy tree link */ ?>
      <? $trees = $this->driver->tryMethod('getHierarchyTrees'); if (!empty($trees)): ?>
        <? foreach ($trees as $hierarchyID => $hierarchyTitle): ?>
          <div class="hierarchyTreeLink hidden-print">
            <input type="hidden" value="<?=$this->escapeHtmlAttr($hierarchyID)?>" class="hiddenHierarchyId" />
            <a class="hierarchyTreeLinkText" data-lightbox href="<?=$this->recordLink()->getTabUrl($this->driver, 'HierarchyTree')?>?hierarchy=<?=urlencode($hierarchyID)?>#tabnav" title="<?=$this->transEsc('hierarchy_tree')?>">
              <i class="fa fa-sitemap"></i>
              <?=$this->transEsc('hierarchy_view_context')?><? if (count($trees) > 1): ?>: <?=$this->escapeHtml($hierarchyTitle)?><? endif; ?>
            </a>
          </div>
        <? endforeach; ?>
      <? endif; ?>
    </div>
    <div class="clearfix visible-xs"></div>
    <div class="col-xs-12">
      <?=$this->record($this->driver)->getOnlineUrls('results')?>
    </div>
    <div class="col-xs-12">
    <? if ($this->userlist()->getMode() !== 'disabled'): ?>
        <? /* Saved lists */ ?>
        <div class="savedLists alert alert-info hidden col-md-11">
          <strong><?=$this->transEsc("Saved in")?>:</strong>
        </div>
    <? endif; ?>
    <? if ($this->layout()->templateDir === 'list'): ?>
    <div class="row">
      <div class="col-xs-12">
        <?=$this->render('list/list-notes.phtml')?>
      </div>
    </div>
    <? endif; ?>
    </div>
    <div class="clearfix visible-xs"></div>
    <div class="col-xs-12 <?= $combinedView ? '' : 'visible-xs' ?>">
    <? if ($this->userlist()->getMode() !== 'disabled'): ?>
        <? /* Add to favorites */ ?>
        <a href="<?=$this->recordLink()->getActionUrl($this->driver, 'Save')?>" class="save-record hidden-print <?= $combinedView ? 'pull-left combined-save-record' : '' ?>" data-lightbox data-id="<?=$this->escapeHtmlAttr($this->driver->getUniqueId()) ?>" title="<?=$this->transEsc('Add to favorites')?>"><i class="fa fa-heart"></i> <span><?=$this->transEsc('Add to favorites')?></span></a>
    <? endif; ?>
    </div>
</div>
