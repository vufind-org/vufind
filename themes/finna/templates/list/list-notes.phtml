<? $notes = $this->driver->getListNotes(); if (!empty($notes)): ?>
  <div class="notes">
    <p class="note-heading">
      <span class="heading"><?=$this->transEsc('Kuvaus')?></span>
      (<?=$this->escapeHtml(trim($this->userPublicName($this->list_username)))?>):
    </p>
    <p class="<?=$this->params->getView() == 'list' ? 'note-rows' : 'note-row'; ?>">
      <?
      $note = implode('', $notes);
      if ($this->params->getView() == 'list') {
        $note = preg_replace("/\r\n|\r|\n/",'<br />', $this->escapeHtml($note));
      }
      echo $note
      ?>
    </p>
  </div>
<? endif; ?>
