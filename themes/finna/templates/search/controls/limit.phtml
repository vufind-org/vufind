        <span><?=$this->transEsc($limitData['desc'])?></span> <i class="fa fa-arrow-down"></i>
      </a>
      <? endif; ?>
    <? endforeach; ?>
    <ul class="dropdown-menu" role="menu">
      <? foreach ($limitList as $limitVal => $limitData): ?>
