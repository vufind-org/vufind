<?php $previewLimit = 5; ?>
<?php $relatedAuthors = $this->authority()->getRelatedAuthors($this->driver, $previewLimit); ?>
<?php $relatedAuthorsCount = count($relatedAuthors); ?>
<?php if ($relatedAuthorsCount > 0): ?>
  <h4><?=$this->transEsc('Related Authors')?></h4>
  <ul class="list-group">
    <?php $i=0; ?>
    <?php foreach ($relatedAuthors as $authorDetails): ?>
      <li class="list-group-item" property="relatedTo" typeof="Person">
        <span property="name"><?=$authorDetails['relatedAuthorTitle'];?></span>
        <?php if ($authorDetails['relatedAuthorID'] != '' && ($authorityDriver = $this->authority()->recordExists($authorDetails['relatedAuthorID']))): ?>
          <a href="<?=$this->url('search-results')?>?lookfor=<?=urlencode($this->authority()->getRelatedJointQueryParams($this->driver, $authorityDriver))?>"><i class="fa fa-link" aria-hidden="true" title="<?=$this->transEsc('author_joint_titles_tooltip')?>"></i></a>
          <a href="<?=$this->record($authorityDriver)->getLink('titles-by', $authorityDriver)?>"><i class="fa fa-book" aria-hidden="true" title="<?=$this->transEsc('author_all_titles_tooltip')?>"></i></a>
          <a property="sameAs" href="<?=$this->record($authorityDriver)->getLink('authority', $authorDetails['relatedAuthorID'])?>"><i class="fa fa-user-circle" aria-hidden="true" title="<?=$this->transEsc('author_details_tooltip')?>"></i></a>
        <?php else: ?>
          <a href="<?=$this->url('search-results')?>?lookfor=<?=urlencode($this->authority()->getRelatedJointQueryParams($this->driver, $authorDetails['relatedAuthorTitle']))?>"><i class="fa fa-link" aria-hidden="true" title="<?=$this->transEsc('author_joint_titles_tooltip')?>"></i></a>
          <a href="<?=$this->url('author-home')?>?author=<?=urlencode($authorDetails['relatedAuthorTitle'])?>"><i class="fa fa-book" aria-hidden="true" title="<?=$this->transEsc('author_all_titles_tooltip')?>"></i></a>
        <?php endif; ?>
      </li>
    <?php endforeach; ?>
  </ul>
  <?php if ($relatedAuthorsCount > $previewLimit): ?>
    <p>
      <a href="<?=$this->url('author-search')?>?author_id=<?=urlencode($this->driver->getUniqueId())?>"><?=$this->transEsc('see all')?> (<?=$relatedAuthorsCount?>)</a>
    </p>
  <?php endif; ?>
<?php endif; ?>
