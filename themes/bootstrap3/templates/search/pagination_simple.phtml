<?php if ($this->pageCount): ?>
  <ul class="pager pagination-simple">
    <?php if (isset($this->previous)): ?>
      <li role="none">
        <a class="page-prev" href="<?=$this->results->getUrlQuery()->setPage($this->previous)?>">
          <span class="sr-only"><?=$this->transEsc('page_prev')?></span>
          <?=$this->icon('page-prev') ?>
        </a>
      </li>
    <?php endif; ?>
    <li class="pager-text">
      <?php
        $params = [
          'results' => $this->results,
          'params' => $this->results->getParams(),
          'recordTotal' => $this->results->getResultTotal(),
          'lookfor' => '',
        ];
        echo $this->render('search/controls/showing.phtml', $params);
      ?>
    </li>
    <?php if (isset($this->next)): ?>
      <li role="none">
        <a class="page-next" href="<?=$this->results->getUrlQuery()->setPage($this->next)?>">
          <span class="sr-only"><?=$this->transEsc('page_next')?></span>
          <?=$this->icon('page-next') ?>
        </a>
      </li>
    <?php endif; ?>
  </ul>
<?php endif; ?>
