<?php
  $classes = array_merge(['page-item'], $this->liClasses ?? []);
  if (null !== $this->page && ($this->currentActive || $this->page != $this->current)) {
    $newParams = $this->params;
    $newParams['page'] = $this->page;
    $href = $this->escapeHtmlAttr($this->currentPath() . '?' . http_build_query($newParams));
    if ($this->page == $this->current) {
        $classes[] = 'active';
    }
  } else {
    $href = '#';
    $classes[] = 'disabled';
  }
?>
<li class="<?=implode(' ', $classes)?>">
  <a class="page-link" href="<?=$href?>" aria-label="<?=$this->escapeHtmlAttr($this->label)?>">
    <?=$contentHtml?>
  </a>
</li>
