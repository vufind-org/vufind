<?php
  $classes = array_merge(['page-item'], $this->liClasses ?? []);
  $aAttrs = $this->htmlAttributes([
    'class' => 'page-link',
    'aria-label' => $this->label,
    'href' => $this->currentPath() . '?' . http_build_query(array_merge($this->params, ['page' => $this->page])),
  ]);
  if ($this->page === $this->current) {
    $classes[] = 'active';
    $aAttrs['aria-current'] = 'page';
  }
?>
<li class="<?=implode(' ', $classes)?>">
  <a<?=$aAttrs?>>
    <?=$contentHtml?>
  </a>
</li>
