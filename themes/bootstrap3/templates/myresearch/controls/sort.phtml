<div class="search-controls">
  <?php
    if (!empty($this->sortList)) {
      echo $this->component(
          'menu-button',
          [
            'wrapperClass' => 'list__sort',
            'showSelectedValue' => true,
            'toggleLabel' => 'Sort',
            'menuItems' => array_map(
                function ($item, $val) {
                  return [
                    'label' => $item['desc'],
                    'url' => '?sort=' . urlencode($val),
                    'selected' => $item['selected'] ?? false,
                  ];
                },
                $this->sortList,
                array_keys($this->sortList)
            ),
          ]
      );
    }
  ?>
</div>
