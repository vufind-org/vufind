<?
  $this->headScript()->appendFile('vendor/ol/ol.js');
  $this->headScript()->appendFile('map_selection.js');
  $this->headLink()->appendStylesheet('/vufind/themes/bootstrap3/js/vendor/ol/ol.css');
  
  $geoField = $this->recommend->getGeoField();
  $urlpath = $this->url('search-results');
  $coordinates = $this->recommend->getSelectedCoordinates();
  $showSelection = true;
  if ($coordinates == null) {
    $coordinates = $this->recommend->getDefaultCoordinates();
    $showSelection = false;
  }
  $height = $this->recommend->getHeight();
  $searchParams = $this->recommend->getSearchParams();
  $params = array(json_encode($geoField), json_encode($coordinates), json_encode($urlpath),
    json_encode($searchParams), json_encode($showSelection));
  $jsParams = implode(', ', $params);
  $jsLoad = "loadMapSelection(" . $jsParams . ");";
  $addSearchOption = <<<EOF
    $('.search-query-options>.advanced').after('&nbsp;&nbsp;<a href="#" class="advanced" onclick=\\'{$jsLoad} $(this).remove(); return false;\\'>{$this->translate('Geographic Search')}</a>');
EOF;
?>
<script type="text/javascript">
function MapHelp() {
  window.alert("To draw the search box:\n1) Click and release on starting point\n2) Drag box\n3) Click on ending point");
}
</script>

<div class="authorbox">
  <div id="geo_search" style="display: none;">
    <button><?=$this->transEsc('Draw Search Box')?></button>
    <span class="geo_maphelp">&nbsp;<a href="javascript:MapHelp();"><?=$this->transEsc('Need Help?')?></a></span>
    <div id="geo_search_map" style="height: <?=$height?>px;"></div>
  </div>
  <? if ($showSelection) :?>
    <?=$this->inlineScript(\Zend\View\Helper\HeadScript::SCRIPT, $jsLoad, 'SET');?>
  <? else: ?>
    <?=$this->inlineScript(\Zend\View\Helper\HeadScript::SCRIPT, $addSearchOption, 'SET');?>
  <? endif; ?>
</div>
