<? $doi = $this->recommend->getDOI(); if (!empty($doi)): ?>
  <? $url = $this->recommend->getURL(); ?>
  <div class="alert alert-info">
    <?=$this->translate('doi_detected_html', ['%%url%%' => $url, '%%doi%%' => $doi])?>
