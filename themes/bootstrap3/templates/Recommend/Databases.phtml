<div class="databases">
  <?php $databases = $this->recommend->getResults(); ?>
  <?php if (!empty($databases)): ?>
    <h4><?=$this->transEsc('databases')?></h4>
    <?php if ($this->transEsc('databases_intro', [], '')): ?>
      <p><?=$this->transEsc('databases_intro')?></p>
    <?php endif; ?>
    <div class="list-group">
      <?php foreach ($databases as $name => $database): ?>
        <div class="list-group-item">
          <span>
            <a href="<?=$this->escapeHtmlAttr($this->proxyUrl($database['url']))?>" class="title" target="_blank">
              <?=$this->icon('external-link') ?>
              <?=$this->escapeHtml($name)?>
            </a>
          </span>
        </div>
      <?php endforeach; ?>
    </div>
  <?php endif ?>
</div>
