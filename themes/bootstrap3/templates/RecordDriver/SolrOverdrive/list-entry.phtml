              <?=!empty($summDate) ? ' (' . $this->escapeHtml($summDate[0]) . ')' : ''?>
            <?php elseif (!empty($summDate)): ?>
              <?=!empty($summAuthor) ? '<br/>' : ''?>
              <?=$this->transEsc('Published') . ' ' . $this->escapeHtml($summDate[0])?>
            <?php endif; ?>
