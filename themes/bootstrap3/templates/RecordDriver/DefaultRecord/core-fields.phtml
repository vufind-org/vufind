  $formatter = $this->recordDataFormatter($this->driver);
  $fields = $formatter->getData($formatter->getDefaults($this->defaults));
?>
<?php if (!empty($fields)): ?>
  <table id="collectionInfo" class="table table-striped">
    <caption class="sr-only"><?=$this->transEsc($this->title ?? 'Bibliographic Details')?></caption>
