  <?php
    $attrs = $this->htmlAttributes($this->passwordPolicy['inputAttrs'] ?? []);
    $attrs->merge(['id' => 'account_password', 'type' => 'password', 'name' => 'password', 'class' => 'form-control', 'autocomplete' => 'new-password']);
  ?>
  <input <?=$attrs?> required>
